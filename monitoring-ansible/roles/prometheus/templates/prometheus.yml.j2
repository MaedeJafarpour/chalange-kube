global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: 15s
  scrape_timeout: 10s

remote_write:
  - url: http://localhost:9090/api/v1/write

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
        {% for host in groups['agent_servers'] %}
        - '{{ hostvars[host].ansible_host }}:{{ node_exporter_port }}'
        {% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
      - source_labels: [__address__]
        regex: '(.*):.*'
        target_label: '__address__'
        replacement: '${1}:9100'
      - source_labels: []
        target_label: env
        replacement: 'production'
      - source_labels: []
        target_label: job_type
        replacement: 'system'

  - job_name: 'cadvisor'
    static_configs:
      - targets:
        {% for host in groups['agent_servers'] %}
        {% if hostvars[host].docker_installed is defined and hostvars[host].docker_installed %}
        - '{{ hostvars[host].ansible_host }}:{{ cadvisor_port }}'
        {% endif %}
        {% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
      - source_labels: [__address__]
        regex: '(.*):.*'
        target_label: '__address__'
        replacement: '${1}:8080'
      - source_labels: []
        target_label: env
        replacement: 'production'
      - source_labels: []
        target_label: job_type
        replacement: 'docker'

  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
      - source_labels: []
        target_label: env
        replacement: 'production'
      - source_labels: []
        target_label: job_type
        replacement: 'monitoring'
